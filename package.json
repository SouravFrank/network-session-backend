{
  "name": "express-firebase-app",
  "version": "1.0.0",
  "description": "A simple Express.js application with TypeScript that interacts with Firebase Realtime Database.",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node src/app.ts",
    "watch": "tsc -w",
    "predeploy": "npm run build"
